@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">
        Usuarios
    </div>
    <div class="card-body">
        <table id="tb_downloads" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>HostName</th>
                    <th>FileID</th>
                    <th>MoveTo</th>
                    <th>BytesTransfer</th>
                    <th>Status</th>
                    <th>ExitStatus</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('#tb_downloads').DataTable({
                "ajax": {
                    "url": "@Url.Action("ListarDownloads", "Downloads")",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "id" },
                    { "data": "hostName" },
                    { "data": "fileID" },
                    { "data": "moveTo" },
                    { "data": "bytesTransfer" },
                    { "data": "status" },
                    { "data": "exitStatus" }

                ],
                "language": {
                    url: "@Url.Content("~/datatable.es-ES.json")",
                },
                columnDefs: [
                    {
                        targets: 0,
                        visible: false
                    }
                ]
            });
        });
    </script>
}